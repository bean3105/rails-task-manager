<h1>My Task List!</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.title, task_path(task.id) %> - <%= link_to "🗑", task_path(task),data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?"}%></li>
  <% end %>
</ul>

<h4 class="btn"><%= link_to "➕ Add a new task", new_task_path %></h4>
